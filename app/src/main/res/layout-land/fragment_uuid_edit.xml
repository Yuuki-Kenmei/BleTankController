<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UuidEditFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/uuidEditGuideLineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/uuidEditGuideLineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/uuidEditConstraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/uuidEditTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="@string/uuid_edit_title"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/uuidEditGuideLineTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/uuidEditGuideLineBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/uuidEditGuideLineTop">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_weight="0.4">

            <TextView
                android:id="@+id/uuidEditServiceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/base_setting_subtitle1"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.sys_ky.bletankcontroller.control.CustomImageButton
                android:id="@+id/uuidEditServiceImageButton"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@null"
                android:src="@drawable/img_info"
                android:scaleType="fitStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/uuidEditServiceTextView"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/uuidEditServiceEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_weight="1"
            android:gravity="start"
            android:hint="@string/hint_uuid"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLength="36"
            android:maxLines="1"
            android:textColor="@color/black"
            android:theme="@style/EditTextStyle"
            app:layout_constraintStart_toStartOf="parent" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_weight="0.4">

            <TextView
                android:id="@+id/uuidEditTxTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/base_setting_subtitle2"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sys_ky.bletankcontroller.control.CustomImageButton
                android:id="@+id/uuidEditTxImageButton"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@null"
                android:src="@drawable/img_info"
                android:scaleType="fitStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/uuidEditTxTextView"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <EditText
            android:id="@+id/uuidEditTxEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_weight="1"
            android:gravity="start"
            android:hint="@string/hint_uuid"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLength="36"
            android:maxLines="1"
            android:textColor="@color/black"
            android:theme="@style/EditTextStyle"
            app:layout_constraintStart_toStartOf="parent" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_weight="0.4">

            <TextView
                android:id="@+id/uuidEditRxTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/base_setting_subtitle3"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.sys_ky.bletankcontroller.control.CustomImageButton
                android:id="@+id/uuidEditRxImageButton"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@null"
                android:src="@drawable/img_info"
                android:scaleType="fitStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/uuidEditRxTextView"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <EditText
            android:id="@+id/uuidEditRxEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_weight="1"
            android:gravity="start"
            android:hint="@string/hint_uuid"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLength="36"
            android:maxLines="1"
            android:textColor="@color/black"
            android:theme="@style/EditTextStyle"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

    <com.sys_ky.bletankcontroller.control.CustomImageButton
        android:id="@+id/uuidEditRetryImageButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:background="@null"
        android:scaleType="fitEnd"
        android:src="@drawable/img_retry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/uuidEditGuideLineBottom"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.sys_ky.bletankcontroller.control.CustomImageButton
        android:id="@+id/uuidEditCancelImageButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:background="@null"
        android:scaleType="fitEnd"
        android:src="@drawable/img_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/uuidEditRetryImageButton"
        app:layout_constraintTop_toTopOf="@+id/uuidEditGuideLineBottom"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>